<Page
    x:Class="Connect4Client.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Connect4Client"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    
    <NavigationView x:Name="NavigationViewControl"
                    IsSettingsVisible="True"
                    ItemInvoked="NavigationViewControl_ItemInvoked"
                    Header="Connect4"
                    Loaded="NavigationViewControl_Loaded">
        <NavigationView.MenuItems>
            <NavigationViewItem x:Uid="HomeItem" x:Name="Home" Tag="Home" Icon="Home"/>
            <NavigationViewItem x:Uid="MatchesItem" x:Name="Matches" Tag="Matches" Icon="CellPhone"/>
            <NavigationViewItem x:Uid="StatisticsItem" x:Name="Stats" Tag="Stats" Icon="List"/>
        </NavigationView.MenuItems>

        <NavigationView.PaneFooter>
            <NavigationViewItem x:Uid="LogoutItem" x:Name="Logout" Tag="Logout" Icon="BlockContact"
                                Tapped="Logout_Tapped"/>
        </NavigationView.PaneFooter>
        
        <ScrollViewer>
            <Frame x:Name="ContentFrame"
                   Padding="20 20 20 20"/>
        </ScrollViewer>
    </NavigationView>
</Page>
